<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link href="{{ app.request.basepath }}/web/css/bootstrap.min.css" rel="stylesheet">
        <link href="{{ app.request.basepath }}/web/css/bootstrap-datetimepicker.min.css" rel="stylesheet">
        <link href="{{ app.request.basepath }}/web/css/main.css" rel="stylesheet">
        <script  src="{{ app.request.basepath }}/web/scripts/jquery-1.11.0.min.js" ></script>
        <script  src="{{ app.request.basepath }}/web/scripts/bootstrap.min.js" ></script>
        <script  src="{{ app.request.basepath }}/web/scripts/moment.min.js" ></script>
        <script  src="{{ app.request.basepath }}/web/scripts/bootstrap-datetimepicker.min.js" ></script>
        {% block head %}
            <title>LPC Cars - Location de voitures Maroc Safi{% block title %}{% endblock %}</title>
        {% endblock %}
    </head>
    <body>
        <div id="menu">
            <nav class="navbar navbar-default navbar-fixed-top">
                <div style="height: 20px"></div>
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <!--<div class="title-content">
                        <a href="/" title=""><img class="site-logo" src="{{ app.request.basepath }}/web/images/thumb.png" alt="" /></a>
                        <a id="site-title" class="navbar-brand" href="/">LPC Cars</a>
                        </div>-->
                        <h1 class="site-title"><a href="/" title="">LPC Cars</a></h1>
                    </div>
                    <div id="navbar" class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li><a href="/">Home</a></li><!--class="active"-->

                            <li><a href="/voitures">Voitures</a></li>

                            <li><a href="/contact">Contact</a></li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            {% if app.security.token and is_granted('IS_AUTHENTICATED_FULLY') %}
                                <li><button type="button" class="btn btn-primary btn-sm">Déconnexion</button>
                                 <li><a href="{{ path('logout') }}">Log out</a></li></li>
                                {% else %}
                                <li><button type="button" class="btn btn-success btn-sm">Inscription</button>&nbsp;</li>
                                <li><button type="button" class="btn btn-primary btn-sm">
                                        <a href="/login" style="color: #FFF; text-decoration:none;">Connexion</a>
                                    </button></li>
                                {% endif %}
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </nav>
        </div>
        <div style="height: 550px">{% block content %}{% endblock %}</div>
        {% block footer %}
            <div id="footer">
                <div style="width: 70%; margin: 0 auto; padding: 10px; color: #404040;">

                    <div class="row">
                        <div class="col-md-4">
                            <div><img alt="ok" style="margin-right: 10px;" src="{{ app.request.basepath }}/web/images/home_contact.png" >Avenue Moulay Souleymane, Safi, Maroc Maroc.</div>
                        </div>
                        <div class="col-md-4">
                            <div><img alt="ok" style="margin-right: 10px;" src="{{ app.request.basepath }}/web/images/mail_contact.png" >E-mail: badr.benazouz@gmail.com</div>
                        </div>
                        <div class="col-md-4">
                            <div><img alt="ok" style="margin-right: 10px;" src="{{ app.request.basepath }}/web/images/phone_contact.png" >Tél.  +212 661 53 03 65</div>
                        </div>
                    </div>

                </div>
            </div>
        {% endblock %}
    </body>
</html>