{% extends "layouts/base.html.twig" %}
{% block head %}
    <link href="{{ app.request.basepath }}/web/css/jasny-bootstrap.min.css" rel="stylesheet">
    <script  src="{{ app.request.basepath }}/web/scripts/jasny-bootstrap.min.js" ></script>
    {{ parent() }}
{% endblock %}
{% block content %}
    <div class="list-voitures">
        <div class="container"> 
            <div style="width: 85%; height: 30px; margin: 2px auto;" >
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" style="float: right">
                    Ajouter nouvelle voiture
                </button>
            </div>
            {% for voiture in voitures %}
                <div class="row">
                    <div class="col-md-6">
                        <img src="{{ app.request.basepath }}/web/images/{{ voiture.url }}.png" alt="véhicule" width="250px" />
                    </div>
                    <div class="col-md-6">
                        <h2>{{ voiture.id }}</h2>
                        <p>{{ voiture.name }}</p>
                        <p>{{ voiture.url }}</p>
                    </div>
                </div>
                <hr style="width: 90%; margin-right: 8%"/>
            {% endfor %}
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Voiture</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="fileinput fileinput-new" data-provides="fileinput">
                            <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;">
                                <img src="{{ app.request.basepath }}/web/images/fordfiesta.png" alt="véhicule" width="250px" />
                            </div>
                            <div>
                                <span class="btn btn-default btn-file"><span class="fileinput-new">Select image</span><span class="fileinput-exists">Change</span><input type="file" name="..."></span>
                                <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Name</label>
                            <input type="text" class="form-control" id="name" placeholder="Enter name">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">URL</label>
                            <input type="text" class="form-control" id="url" placeholder="Enter url">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
